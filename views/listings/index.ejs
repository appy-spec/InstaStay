
<% layout("/layouts/boilerplates.ejs") %>

<style>

  #filters{

    display:flex;
    flex-wrap: wrap;
    align-items: center;
  }

  .filter{

    text-align: center;
    opacity: 0.7;
    margin-right: 1.8rem;
    margin-top: 1.6rem;
  }

  .filter p{

    font-size: 0.9rem;
  }

  .filter:hover{

    opacity:1;
    cursor:pointer;
  }

  .text-info{

    display:none;
  }

  .toggle-taxes{

    border: 1px solid black;
    border-radius: 1rem;
    height:3.22rem;
    padding: 0.9rem;
    display: flex;
    align-items: center;
    margin-left: 2.3rem;
  }

</style>

<body>

    <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic cities</p>
      </div>
      <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tractor"></i></div>
        <p>Farms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-igloo"></i></div>
        <p>Domes</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-sailboat"></i></div>
        <p>Boats</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-sun"></i></div>
        <p>Desert</p>
      </div>
      <div class="toggle-taxes">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" 
          type="checkbox" 
          role="switch" 
          id="flexSwitchCheckDefault">
          <label class="form-check-label" 
          for="flexSwitchCheckDefault">
          Display total after taxes</label>
        </div>
      </div>
    </div>
    <div class="row row-col-lg-2 row-col-md-2 row-col-sm-1 mt-3">

      <% for(listing of allListing){%>

        <div class="col">

          <a class="link-text" href="listings/<%= listing._id%>">
            <div class="card listing-card" style="width: 18rem;">
              <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image" style="height: 19rem;">
              <div class="card-img-overlay"></div>
              <div class="card-body">
                <b class="card-title"><%=listing.title%></b>
                <p class="card-text">&#8377;
                  <%=listing.price.toLocaleString("en-IN")%>/night
                  <i class="text-info">&nbsp;&nbsp;+18% GST</i>
                </p>
              </div>
            </div>
          </a>  
          
        </div>

      <%}%>

    </div>

</body>

<script>
  let taxSwitch=document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", ()=>{

    let textInfo=document.getElementsByClassName("text-info");
    for(info of textInfo){

      if(info.style.display=="inline"){

        info.style.display="none";
      }
      else{
        info.style.display="inline";
      }
    }
  })
</script>
