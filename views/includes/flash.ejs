<% if(success && success.length){%>

    <div class="row">
        <div class="alert alert-success alert-dismissible col-5 offset-3 mt-2" 
          role="alert">
            <p style="margin-bottom: 0%;"><%=success%></p>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
    </div>

<%}%>

<% if(failure && failure.length){%>

  <div class="row">
      <div class="alert alert-danger alert-dismissible col-5 offset-3" 
        role="alert">
          <p style="margin-bottom: 0%;"><%=failure%></p>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
  </div>

<%}%>